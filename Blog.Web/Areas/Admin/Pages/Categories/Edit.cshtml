@page
@using Blog.Application.Statics
@model Blog.Web.Areas.Admin.Pages.Categories.EditModel
@{
    ViewData["Title"] = $"ویرایش {Model.Edit.Title}";
}

<div class="row">
    <!-- Basic Layout -->
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Edit.Image" />
                    <input type="hidden" asp-for="Edit.Id" />
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Edit.Title"></label>
                        <div class="col-sm-10">
                            <input asp-for="Edit.Title" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Edit.Slug"></label>
                        <div class="col-sm-10">
                            <input asp-for="Edit.Slug" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Edit.CategoryColorId"></label>
                        <div class="col-sm-10">
                            <select class="form-select" asp-items="Model.ColorsSelectListItem" asp-for="Edit.CategoryColorId"></select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Edit.NewImage"></label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-4">
                                    <input type="file" accept=".jpeg,.png,.webp,.jpg" asp-for="Edit.NewImage" class="form-control" image-input="1">
                                </div>
                                <div class="col-md-8">
                                    <img style="width: 200px;height: 200px"
                                    src="@PathTools.CategoryThumbImagePath@Model.Edit.Image"
                                    image-preview="1" />

                                </div>
                            </div>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>


                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
