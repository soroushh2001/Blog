@page
@model Blog.Web.Areas.Admin.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "دسته بندی ها";
    int counter = 0;
}

<h4>@ViewData["Title"]</h4>

<a class="btn btn-success" asp-area="Admin" asp-page="/Categories/Create">افزودن</a>
<div class="row" id="categories-div">
    @if (Model.Categories.Any())
    {
        <div class="card mt-2">
            <div class="table-responsive text-nowrap">

                <table class="table">
                    <thead>
                        <tr class="text-nowrap">
                            <th>#</th>
                            <th>عنوان</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                            counter++;
                            <tr id="category-@item.Id">
                                <th scope="row">@counter</th>
                                <td>@item.Title</td>
                                <td>
                                    
                                    <a class="btn btn-warning" asp-area="Admin" asp-page="/Categories/Edit" asp-route-id="@item.Id">ویرایش</a>

                                    @if (item.IsDeleted)
                                    {
                                        <a class="btn btn-info" href="javascript:void(0)"
                                           onclick="toggleDeleteCategory('@item.Id','@item.Title',true)">بازگردانی</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-danger" href="javascript:void(0)"
                                           onclick="toggleDeleteCategory('@item.Id','@item.Title',false)">حذف</a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p class="alert alert-info">موردی جهت نمایش وجود ندارد</p>
    }
</div>

