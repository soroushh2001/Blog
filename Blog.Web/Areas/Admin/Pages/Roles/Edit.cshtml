@page
@model Blog.Web.Areas.Admin.Pages.Roles.EditModel
@{
    ViewData["Title"] = $"ویرایش {Model.Edit.PersianTitle}";
}

<div class="row">
    <!-- Basic Layout -->
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">@ViewData["Title"] </h5>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Edit.Id" />
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Edit.PersianTitle"></label>
                        <div class="col-sm-10">
                            <input asp-for="Edit.PersianTitle" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Edit.EnglishTitle"></label>
                        <div class="col-sm-10">
                            <input asp-for="Edit.EnglishTitle" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Edit.PermissionIds"></label>
                        <div class="col-sm-10">
                            @if (Model.Permissions != null)
                            {
                                foreach (var permission in Model.Permissions.Where(c => c.ParentId == null))
                                {
                                    <ul>
                                        <li>
                                            <h6>@permission.PersianTitle</h6>
                                            <ul>
                                                @foreach (var subPermission in Model.Permissions.Where(c => c.ParentId == permission.Id))
                                                {
                                                    <li>
                                                        <div class="form-check mt-3">
                                                            <label class="form-check-label" for="defaultCheck1">
                                                                @subPermission.PersianTitle
                                                            </label>
                                                            <input class="form-check-input" type="checkbox" value="@subPermission.Id" name="Edit.PermissionIds"
                                                                   @(Model.Edit.PermissionIds != null && Model.Edit.PermissionIds.Contains(subPermission.Id) ? "checked" : "")>
                                                        </div>
                                                    </li>
                                                }
                                            </ul>
                                        </li>
                                    </ul>
                                }
                            }

                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>


                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

