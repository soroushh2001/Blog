@page
@model Blog.Web.Areas.Admin.Pages.Users.ChangeUserPasswordModel
@{
    ViewData["Title"] = "تغییر کلمه عبور کاربر";
}

<div class="row">
    <!-- Basic Layout -->
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Change.UserId" />
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Change.Password"></label>
                        <div class="col-sm-10">
                            <input asp-for="Change.Password" class="form-control">
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>


                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
