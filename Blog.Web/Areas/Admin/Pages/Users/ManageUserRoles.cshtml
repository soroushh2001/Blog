@page
@model Blog.Web.Areas.Admin.Pages.Users.ManageUserRolesModel
@{
    ViewData["Title"] = "مدیریت نقش های کاربر";
}

<div class="row">
    <!-- Basic Layout -->
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Manage.UserId" />

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Manage.SelectedRoles"></label>
                        <div class="col-sm-10">
                            @if (Model.Roles != null)
                            {
                                foreach (var role in Model.Roles)
                                {
                                    <ul>
                                        <li>

                                            <div class="form-check mt-3">
                                                <label class="form-check-label" for="defaultCheck1">
                                                    @role.PersianTitle
                                                </label>
                                                <input class="form-check-input" type="checkbox" value="@role.Id" name="Manage.SelectedRoles"
                                                       @(Model.Manage.SelectedRoles != null && Model.Manage.SelectedRoles.Contains(role.Id) ? "checked" : "")>
                                            </div>

                                        </li>
                                    </ul>
                                }
                            }

                        </div>
                    </div>


                    <div asp-validation-summary="All" class="text-danger"></div>


                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

