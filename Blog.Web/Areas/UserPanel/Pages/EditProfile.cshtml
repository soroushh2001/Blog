@page "/edit-profile"
@using Blog.Application.Statics
@model Blog.Web.Areas.UserPanel.Pages.EditProfileModel
@{
    ViewData["Title"] = "ویرایش پروفایل";
}

<section class="py-4">
    <div class="container">

        <div class="row g-4">
            <!-- Profile cover and info START -->
            <div class="col-12">
                <div class="card mb-4 position-relative z-index-9">
                    <!-- Cover image -->
                    <div class="py-5 h-200 rounded" style="background-image:url(/site/assets/images/blog/16by9/big/07.jpg); background-position: center bottom; background-size: cover; background-repeat: no-repeat;">
                    </div>
                    <div class="card-body pt-3 pb-0">
                        <div class="row d-flex justify-content-between">
                            <!-- Avatar -->
                            <div class="col-sm-12 col-md-auto text-center text-md-start">
                                <div class="avatar avatar-xxl mt-n5">
                                    <img class="avatar-img rounded-circle border border-white border-3 shadow" src="@PathTools.UserAvatarThumbPath@Model.Edit!.CurrentAvatar" alt="">
                                </div>
                            </div>
                            <!-- Profile info -->
                            <div class="col-sm-12 col-md text-center text-md-start d-md-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="my-1">@Model.Edit!.UserName <i class="bi bi-patch-check-fill text-info small"></i></h4>
                                    <p class="m-0"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Profile info END -->
        </div>

        <form method="post"> 
            <input type="hidden" asp-for="Edit.CurrentAvatar" />
            <div class="row g-4">
                <!-- Left sidebar START -->
                <div class="col-lg-7 col-xxl-8">
                    <!-- Profile START -->
                    <div class="card border mb-4">
                        <div class="card-header border-bottom p-3">
                            <h4 class="card-header-title mb-0">حساب کاربری</h4>
                        </div>
                        <div class="card-body">
                            <!-- Full name -->

                            <div class="mb-3">
                                <label class="form-label">نام کاربری</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" asp-for="Edit.UserName">
                                </div>
                            </div>
                            <!-- Profile picture -->
                            <div class="mb-3">
                                <label class="form-label">تصویر پروفایل</label>
                                <!-- Avatar upload START -->
                                <div class="d-flex align-items-center">
                                    <div class="position-relative me-3">
                                        <!-- Avatar edit -->
                                        <div class="position-absolute top-0 end-0  z-index-9">
                                            <a class="btn btn-sm btn-light btn-round mb-0 mt-n1 me-n1" href="#"> <i class="bi bi-pencil"></i> </a>
                                        </div>
                                        <!-- Avatar preview -->
                                        <div class="avatar avatar-xl">
                                            <img class="avatar-img rounded-circle border border-white border-3 shadow" src="@PathTools.UserAvatarThumbPath@Model.Edit!.CurrentAvatar" alt="" image-preview="1">
                                        </div>
                                    </div>
                                    <!-- Avatar remove button -->
                                    <div class="avatar-remove">
                                        <input class="btn btn-light" type="file" asp-for="Edit.NewAvatar" accept=".png,.jpg,.jpeg,.webp" image-input="1" />
                                    </div>
                                </div>
                                <!-- Avatar upload END -->
                            </div>

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <!-- Save button -->
                            <div class="d-flex justify-content-end mt-4">
                                <button type="submit" class="btn btn-primary">ذخیره</button>
                            </div>
                        </div>
                    </div>
                    <!-- Profile END -->
     
                </div>
         
            </div>
        </form>
    </div>
</section>