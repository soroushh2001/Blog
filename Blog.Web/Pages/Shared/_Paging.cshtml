@model Blog.Application.ViewModels.Common.PagingViewModel

<nav class="my-5" aria-label="navigation">
    <ul class="pagination d-inline-block d-md-flex justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" onclick="submitPagingForm('@(Model.CurrentPage - 1)')" href="javascript:void(0);">قبل</a>
            </li>
        }

        @for (var i = Model.StartPage; i <= Model.EndPage; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")"><a class="page-link" onclick="submitPagingForm('@i')" href="javascript:void(0);">@i</a></li>

        }

        @if (Model.CurrentPage < Model.EndPage)
        {
            <li class="page-item">
                <a class="page-link" onclick="submitPagingForm('@(Model.CurrentPage + 1)')" href="javascript:void(0);">بعد</a>
        </li> 
        }
       
    </ul>
</nav>